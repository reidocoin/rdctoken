
## <summary>policy for rdct</summary>


########################################
## <summary>
##	Transition to rdct.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`rdct_domtrans',`
	gen_require(`
		type rdct_t, rdct_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, rdct_exec_t, rdct_t)
')


########################################
## <summary>
##	Execute rdct server in the rdct domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`rdct_initrc_domtrans',`
	gen_require(`
		type rdct_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, rdct_initrc_exec_t)
')


########################################
## <summary>
##	Search rdct lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`rdct_search_lib',`
	gen_require(`
		type rdct_var_lib_t;
	')

	allow $1 rdct_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read rdct lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`rdct_read_lib_files',`
	gen_require(`
		type rdct_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, rdct_var_lib_t, rdct_var_lib_t)
')

########################################
