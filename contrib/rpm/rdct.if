########################################
## <summary>
##	All of the rules required to administrate
##	a rdct environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`rdct_admin',`
	gen_require(`
		type rdct_t;
		type rdct_initrc_exec_t;
		type rdct_var_lib_t;
	')

	allow $1 rdct_t:process { ptrace signal_perms };
	ps_process_pattern($1, rdct_t)

	rdct_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 rdct_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, rdct_var_lib_t)

')

